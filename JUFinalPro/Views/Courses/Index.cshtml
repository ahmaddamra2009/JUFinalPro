@model IEnumerable<JUFinalPro.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CoursesName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoursesDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.STime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
